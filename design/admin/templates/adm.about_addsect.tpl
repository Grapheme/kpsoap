{include file='unit.tiny.tpl' type='edit'}<form action="{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/{if !empty($SITE_SECTION_PAGE)}{$SITE_SECTION_PAGE}/{/if}" method="post" {strip}	{if $page.content.alias != '_'}		  onSubmit="return validation.test([{ name:'menutitle',title:'Название страницы (в меню)' },											{ name:'aliasfield',title:'Псевдоним' },											{ name:'title',title:'Заголовок' }],'submit')"	{/if}	{/strip}>	<input type="hidden" name="action" value="insertgroup" />	<table class="panels">		<tr>			<td class="panel">				<div class="title">Добавление новой страницы в раздел</div>				<div class="form">					<div class="line">						<div class="f_title">Название страницы (в меню)</div><input class="text" name="menutitle" type="text" maxlength="30" style="width: 200px" value="" onkeyup="aliasConvert.setCnvVal(this, 'alias', 'aliasfield', '')" />					</div>							<div class="line">						<input id="alias" name="alias" type="hidden" value="{$page.content.alias}" />						<div class="f_title">Алиас</div><input class="text" id="aliasfield" name="aliasfield" type="text" maxlength="100" style="width: 400px" value="" readonly="readonly" />						<div class="f_title">Приоритет</div><input class="text" name="priority" type="text" style="width: 50px" value="{$page.priority}" />					</div>										<div class="line">						<div class="f_title">Заголовок</div><input class="text" name="title" type="text" style="width: 95%" />						<div class="f_title">Контент (доступен полноэкранный режим редактирования)</div>						<textarea name="text" 								  class="height:350px max-height:350px min-height:350px width:95% max-width:95% min-width:95%"></textarea>					</div>				</div>			</td>		</tr>	</table>	<div class="panel-operation">		<input class="button" type="button" value="Отмена" onclick="javascript:button.disable(this); javascript:self.location.href='{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/{if !empty($SITE_SECTION_PAGE)}{$SITE_SECTION_PAGE}/{/if}'" />		<input class="button" id="submit" type="submit" value="Добавить" />	</div></form>