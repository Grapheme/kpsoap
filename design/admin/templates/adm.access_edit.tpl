<script type="text/javascript" src="{$SERVER_URL_NAME}{#tiny_mce#}"></script><script type="text/javascript">			tinyMCE.init({				mode : "textareas",				theme : "advanced",				language : "ru",				skin : "o2k7",				skin_variant : "default",				plugins : "safari,pagebreak,style,layer,table,save,advhr,advimage,advlink,emotions,iespell,inlinepopups,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template,images",				theme_advanced_buttons1 : "newdocument,|,bold,italic,underline,strikethrough",				theme_advanced_buttons2 : "",				theme_advanced_buttons3 : "",				theme_advanced_toolbar_location : "top",				theme_advanced_toolbar_align : "left",				theme_advanced_resizing : false,				content_css : "{$SERVER_URL_NAME}client/styles/styles.css"			});</script> 	<form action="{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/" method="post" onsubmit="javascript:button.disable(getElementById('submit'))">	<input type="hidden" name="action" value="save" />	<input type="hidden" name="id" value="{$page.edit_id}" />	<table class="panels">		<tr>			<td class="panel">				<div class="title">Новая роль</div>				<div class="form">					<div class="line">					<div class="f_title">Название</div><input class="text" name="name" type="text" maxlength="20" style="width: 150px" value="{$page.role_info.name}" /><br />					<div class="f_title">Описание</div><div class="border"><textarea name="description" style="width: 100%; height: 250px;">{$page.role_info.description}</textarea></div></div>
				</div>				<!--<div class="title">ВНИМАНИЕ</div>				<div class="form">						  Вы редактируете зарезервированную системную роль имеющую супер права. 				</div>				{$page.edit_id}-->			</td>			<td class="panel right2">				<div class="title">Назначение прав для Роли</div>				<div class="form">					<div class="line">						<select name="operation_rights[]" multiple="multiple" style="width: 100%; height: 500px; background-color: #EEF5FC;">							<option value="null" style=" color: #C0C0C0" {if $page.operation_select_count == 0}selected="selected"{/if}>Права отсутствуют</option>						{assign var="operation_group" value="_"}						{section name=operation loop=$page.operation}                							{assign var="new_operation_group" value=$page.operation[operation].description|regex_replace:"/\[(.+)\].*/":"\\1"}							{if ($operation_group != $new_operation_group)}								{if $operation_group!="_"}							</optgroup>								{/if}							<optgroup label="{$new_operation_group}">								{assign var="operation_group" value=$new_operation_group}							{/if}							{strip}<option value="{$page.operation[operation].id}" 							{section name=operation_select loop=$page.operation_select}                								{if ($page.operation_select[operation_select].id_operation == $page.operation[operation].id)}									selected="selected" 								{/if}							{/section}								>{$page.operation[operation].description|regex_replace:"/\[.+\]/":" "}</option>{/strip}							{if $smarty.section.sitesection.last} 							</optgroup>							{/if}						{/section}						</select>					</div>				</div>			</td>		</tr>	</table>	<input class="button" type="button" value="Отмена" onclick="javascript:button.disable(this); javascript:self.location.href='{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/'" />	<input class="button" id="submit" type="submit" value="Сохранить" /></form>