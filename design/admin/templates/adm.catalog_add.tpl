<script type="text/javascript" src="{$SERVER_URL_NAME}{#tiny_mce#}"></script><script type="text/javascript" src="{$SERVER_URL_NAME}admin/script/calendar/calendar_ru.js"></script>						<script type="text/javascript">tinyMCE.init({	mode : "exact",	elements : "about_product,used_interior",	theme : "advanced",	language : "ru",	skin : "o2k7",	skin_variant : "default",	plugins : "safari,pagebreak,style,layer,table,save,advhr,advimage,advlink,emotions,iespell,inlinepopups,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template,images",	theme_advanced_buttons1 : "newdocument,|,undo,redo,|,bold,italic,underline,strikethrough,|,bullist,numlist,|,formatselect,|,cut,copy,paste,pastetext,pasteword",	theme_advanced_buttons2 : "search,replace,|,link,unlink,anchor,image,images,cleanup,removeformat,code,|,sub,sup,|,charmap,emotions,iespell,media,|,fullscreen",	theme_advanced_buttons3 : "",	theme_advanced_toolbar_location : "top",	theme_advanced_toolbar_align : "left",	theme_advanced_statusbar_location : "bottom",	theme_advanced_resizing : false,	convert_urls : false,	content_css : "{$SERVER_URL_NAME}client/styles/main.css"});</script> <div id="tabline"></div><form id="photouploader" action="{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/:axah=out&action=setphoto" method="post" enctype="multipart/form-data">	<input type="file" name="photo" />						</form><form name="insert" action="{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/" method="post" {strip}onSubmit="return validation.test([{ name:'article',title:'Артикул' },																																  { name:'title',title:'Название / Название EN (RU)' }],'submit')"{/strip}>	{if isset($page.content.edit)}	<input type="hidden" name="action" value="save" />	<input type="hidden" name="id" value="{$page.content.data.id}" />	{else}	<input type="hidden" name="action" value="insert" />	{/if}	<div id="texts[0]" style="display: none">		<table class="panels">			<tr>				<td class="panel">					<div class="title">{$page.content.group_name} &raquo; {if isset($page.content.edit)}Редактирование{else}Новая позиция{/if}</div>					<div class="form">						<div class="line">							<div class="f_title">Фото</div>							<div class="photouploader-panel" count="10" size="120">								<div class="response">Загрузка</div>								<div class="photos">									<div class="content">									{if isset($page.content.data)}										{if is_array($page.content.data.photo) && count($page.content.data.photo)>0}											{foreach from=$page.content.data.photo_preview item=row key=index}										<div class="item">											<img src="{$row}" alt="{$page.content.data.photo[$index]}" /><span class="del"><!-- --></span>										</div>											{/foreach}										{/if}									{/if}									</div>									<div class="clear"><!-- --></div>								</div>								<input type="button" class="button" value="Добавить" />								<input name="photo" type="hidden" value="" />							</div>														<div id="tst"></div>							<div class="f_title">Артикул <span class="article_alert"></span></div>							<input class="text maxlength:300 width:80%"								   name="article" type="text"								   value="{if isset($page.content.data)}{$page.content.data.article}{/if}" />														<div class="f_title">Название / Название EN (RU)</div>							<input class="text maxlength:300 width:80%"								   name="title" type="text"								   value="{if isset($page.content.data)}{$page.content.data.title}{/if}" />														<div class="f_title">Подраздел</div>							<select name="subtype" class="display:inline">								<option value="0">Без подраздела</option>							{foreach from=$page.content.subtype item=cn_row key=cn_index}								<option value="{$cn_row.id}"{if isset($page.content.data) && $page.content.data.subtype == $cn_row.id} selected="selected"{/if}>{$cn_row.title}</option>							{/foreach}							</select>															<div class="f_title">Доп заголовок</div>							<select class="subtitle-changer" change="{if isset($page.content.data)}{$page.content.data.subtitle}{/if}">								<option value="">Отсутствует</option>								<option value="[new-subtitle-element]">Новый</option>							{foreach from=$page.content.subtitles item=cl_row key=cn_index}								{if (!empty($cl_row.subtitle))}									{assign var="sub_id" value=$cl_row.subtitle|regex_replace:'/([0-9]*).*/':'\\1'}									{assign var="sub_vl" value=$cl_row.subtitle|regex_replace:'/[0-9]*\[(.*)\]/':'\\1'}									{if ($page.content.type_id == $sub_id)}								<option value="{$cl_row.subtitle}">{$sub_vl}</option>									{/if}								{/if}							{/foreach}							</select>														<div class="f_title">Вес / Объем (X.XX)</div>							{if isset($page.content.data)}							{assign var=weight value=";"|explode:$page.content.data.weight}							{/if}							<input class="dat-float text maxlength:10 width:100px display:inline"									name="weight" type="text"									value="{if isset($page.content.data)}{$weight[1]}{else}0{/if}" />							<select name="weight_type" class="display:inline">								<option value="0"{if isset($weight[0]) && $weight[0] == '0'} selected="selected"{/if}>граммы (г)</option>								<option value="1"{if isset($weight[0]) && $weight[0] == '1'} selected="selected"{/if}>килограммы (кг)</option>								<option value="2"{if isset($weight[0]) && $weight[0] == '2'} selected="selected"{/if}>милилитры (мл)</option>								<option value="3"{if isset($weight[0]) && $weight[0] == '3'} selected="selected"{/if}>литры (л)</option>							</select>														{foreach from=$page.content.columns item=row key=index}								{if $row.Field == 'weight'}									<div class="f_title">Вес (X.XX) кг</div>									<input class="dat-float text maxlength:10 width:100px display:inline"										   name="weight" type="text"										   value="{if isset($page.content.data)}{$page.content.data.weight}{/if}" />								{/if}								{if $row.Field == 'use'}									<div class="f_title">Применение</div>									<textarea name="use" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.use}{/if}</textarea>								{/if}								{if $row.Field == 'consist'}									<div class="f_title">Состав</div>									<textarea name="consist" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.consist}{/if}</textarea>								{/if}								{if $row.Field == 'storage'}									<div class="f_title">Условия хранения</div>									<textarea name="storage" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.storage}{/if}</textarea>								{/if}								{if $row.Field == 'expiration'}									<div class="f_title">Срок годности</div>									<textarea name="expiration" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.expiration}{/if}</textarea>								{/if}								{if $row.Field == 'contr'}									<div class="f_title">Противопоказания</div>									<textarea name="contr" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.contr}{/if}</textarea>								{/if}							{/foreach}							<div class="f_title">О товаре</div>							<textarea id="about_product" name="about_product" 									  class="border height:250px max-height:250px min-height:250px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.about_product}{/if}</textarea>							{foreach from=$page.content.columns item=row key=index}								{if $row.Field == 'extra'}									<div class="f_title">Дополнительно</div>									<textarea name="extra" 											  class="border height:50px max-height:50px min-height:50px width:80% max-width:80% min-width:80%">{if isset($page.content.data)}{$page.content.data.extra}{/if}</textarea>								{/if}							{/foreach}							<div class="f_title">ИПТ</div>							<input class="text maxlength:20 width:100px display:inline"								   name="index_similarity" type="text"								   value="{if isset($page.content.data)}{$page.content.data.index_similarity}{/if}" />						</div>											</div>				</td>			</tr>		</table>	</div>			<div class="panel-operation">																<input class="button" type="button" value="Отмена" onclick="javascript:button.disable(this); javascript:self.location.href='{$SERVER_URL_NAME}admin/{$SITE_SECTION_NAME}/'; return true" />		<input class="button" id="submit" type="submit" value="{if isset($page.content.edit)}Сохранить{else}Добавить{/if}" />	</div></form><script language="javascript">	marks.init(new Array(new Array('mark1','Содержимое страницы')), "tabline", "texts", {if !empty($page.mark)}{$page.mark}{else}0{/if}, "top.gif", "sel", "top_grey.gif", "no_sel");</script>